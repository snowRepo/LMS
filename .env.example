# LMS Environment Configuration
# Copy this file to .env and update with your actual values
# Never commit .env to version control

# Application Settings
APP_NAME="LMS - Library Management System"
APP_VERSION="1.0.0"
APP_URL="http://localhost/LMS"
APP_ENV="development"
DEBUG_MODE=true

# Database Configuration
DB_HOST="localhost"
DB_USERNAME="root"
DB_PASSWORD=""
DB_NAME="lms_db"
DB_CHARSET="utf8mb4"

# Email Configuration (PHPMailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_ENCRYPTION="tls"
FROM_EMAIL=""
FROM_NAME="LMS - Library Management System"
REPLY_TO_EMAIL=""

# Session Configuration
SESSION_TIMEOUT=3600

# Subscription Plans Configuration
BASIC_PLAN_BOOK_LIMIT=500
STANDARD_PLAN_BOOK_LIMIT=2000
PREMIUM_PLAN_BOOK_LIMIT=-1

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH="../uploads/"

# Email Templates
EMAIL_TEMPLATES_PATH="../email-templates/"

# Notification Settings
SEND_WELCOME_EMAIL=true
SEND_OVERDUE_NOTIFICATIONS=true
SEND_RESERVATION_ALERTS=true
OVERDUE_REMINDER_DAYS=3

# Email Logging
ENABLE_EMAIL_LOGGING=true

# Security Settings
CSRF_TOKEN_EXPIRE=3600
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=1800

# Timezone
APP_TIMEZONE="America/New_York"